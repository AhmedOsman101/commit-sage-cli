{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["ollama", "commit", "provider"],
  "properties": {
    "general": {
      "type": "object",
      "required": ["maxRetries", "initialRetryDelayMs"],
      "properties": {
        "maxRetries": {
          "type": "integer",
          "minimum": 0
        },
        "initialRetryDelayMs": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "ollama": {
      "type": "object",
      "required": ["model", "baseUrl"],
      "properties": {
        "model": {
          "type": "string"
        },
        "baseUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "commit": {
      "type": "object",
      "required": ["commitFormat", "onlyStagedChanges", "commitLanguage"],
      "properties": {
        "autoCommit": {
          "type": "boolean"
        },
        "autoPush": {
          "type": "boolean"
        },
        "commitFormat": {
          "type": "string",
          "enum": ["conventional", "angular", "karma", "emoji", "semantic"]
        },
        "onlyStagedChanges": {
          "type": "boolean"
        },
        "commitLanguage": {
          "type": "string",
          "enum": ["english", "russian", "chinese", "japanese"]
        },
        "promptForRefs": {
          "type": "boolean"
        }
      }
    },
    "provider": {
      "type": "object",
      "required": ["type", "model"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "gemini",
            "openai",
            "anthropic",
            "deepseek",
            "mistral",
            "xai",
            "ollama"
          ],
          "description": "AI provider type"
        },
        "model": {
          "type": "string",
          "description": "Model ID (e.g., 'gemini-2.5-flash-lite', 'gpt-5-nano', 'claude-sonnet-4-5')"
        }
      }
    }
  }
}
